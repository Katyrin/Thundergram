<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GroupButtonStyle">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/padding_group_button</item>
        <item name="android:paddingRight">@dimen/padding_group_button</item>
        <item name="android:minWidth">@dimen/size_app_bar_icon_image</item>
        <item name="android:minHeight">@dimen/size_app_bar_icon_image</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/background_app_bar_button</item>
        <item name="cornerRadius">@dimen/corner_radius_app_bar_button</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textColor">@color/header_text_color_light</item>
    </style>

    <style name="BaseTextStyle.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseTextStyle.Header.Normal">
        <item name="android:textSize">@dimen/text_size_chat_name_normal</item>
        <item name="android:layout_margin">@dimen/margin_edge</item>
    </style>

</resources>